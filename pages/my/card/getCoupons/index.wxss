.totalWrap {
  position: relative;
  padding-top: 40rpx;
  padding-bottom: 130rpx;
  background: -webkit-gradient(linear, top left, top right, color-stop(0%,#0d6fb1), color-stop(100%,#033150));
  background: -webkit-linear-gradient(left, #0d6fb1 0%,#033150 100%);
  background: linear-gradient(left right, #0d6fb1 0%,#033150 100%);
}
.totalWrap .titleWrap {
  height: 280rpx;
  line-height: 280rpx;
  text-align: center;
  font-size: 40rpx;
  color: #fff;
}
.totalWrap .titleWrap .num {
  font-size: 50rpx;
  color: #f4bc41;
  margin: 0 5rpx;
  font-weight: bold;
}
.totalWrap .bottomimg {
  position: absolute;
  bottom: -10rpx;
  left: 0;
