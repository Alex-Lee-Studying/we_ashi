  display: flex;
  justify-content: space-between;
  align-items: center;
}
.listWrap .listItem .big {
  font-size: 74rpx;
  color: #fff;
}
.listWrap .listItem .small {
  font-size: 23rpx;
  color: #fff;
}
.listWrap .listItem .btn {
  padding: 0;
  font-weight: normal;
  width: 120rpx;
  height: 50rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 10rpx;
  border: 2rpx solid #fff;
  font-size: 28rpx;
  color: #fff;
  background-color: transparent;
}
/* 弹出层 */
.couponDialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.4);   /*设置阴影半透明背景如： background: rgba(0, 0, 0, 0.4);*/
  display: none;
}  
.couponDialog__container {
  position: fixed;
  bottom: 400rpx;
  width: 690rpx;    /*弹窗布局宽*/
  height: 570rpx;   /*弹窗布局高，与下面弹出距离transform有关*/
  margin-left: 30rpx;
  background: #fff;
  transform: translateY(300%);  /*弹框弹出距离，与弹框布局高度有关，如300%表示弹起距离为3倍弹窗高度 */
  transition: all 0.4s ease;
  z-index: 12;
  border-radius: 10rpx;
}  
.couponDialogShow .couponDialog__container {
  transform: translateY(0);
}
.couponDialogShow .couponDialog__mask {
  display: block;
}
