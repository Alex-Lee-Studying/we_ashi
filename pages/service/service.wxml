<view class="container" style="padding-bottom: {{isIphoneX? '98rpx': '0'}}">
  <view class="tabWrap">
    <text class="tabItem selected" data-tab="express" wx:if="{{tabname === 'express'}}">各国快递</text>
    <text class="tabItem" data-tab="express" bindtap="changeTab" wx:else>各国快递</text>
    <text class="tabItem selected" data-tab="network" wx:if="{{tabname === 'network'}}">脚递网点</text>
    <text class="tabItem" data-tab="network" bindtap="changeTab" wx:else>脚递网点</text>
  </view>

  <view class="expressCont" hidden="{{tabname === 'network'}}">
    <view class="expressWrap" wx:for="{{expressList}}" wx:key="index">
      <view class="countryWrap">
        <image src="{{item.img}}" mode="widthFix"></image>
        <text>{{item.country}}</text>
      </view>
      <view class="expressList">
        <view class="expressItem" wx:for="{{item.sub}}" wx:key="*this" wx:for-item="sub">
          <image src="{{sub.logo}}" mode="widthFix" class="logo"></image>
          <view class="content">
            <text class="name">{{sub.name}}</text>
            <text class="other" hidden="{{!sub.website}}">{{sub.website}}</text>
            <text class="other" hidden="{{!sub.tel}}">{{sub.tel}}</text>
            <text class="other" hidden="{{!sub.contact}}">{{sub.contact}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class="networkCont" hidden="{{tabname === 'express'}}">
    <view class="networkWrap" wx:for="{{networkList}}" wx:key="index">
      <view class="flag">
        <image src="{{item.img}}" mode="widthFix"></image>
        <text class="country">{{item.country}}</text>
      </view>
      <view class="content">
        <view class="sub" wx:for="{{item.sub}}" wx:key="*this" wx:for-item="sub">
          <text class="other">{{sub.address}}</text>
          <text class="other">电话：{{sub.tel}}</text>
          <text class="other">联系人：{{sub.name}}</text>
          <text class="other">邮编：{{sub.zipcode}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
