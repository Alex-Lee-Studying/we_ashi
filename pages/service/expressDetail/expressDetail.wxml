<view class="container">
  <view class="expressWrap">
    <view class="countryWrap">
      <image src="{{express.country_icon}}" mode="widthFix"></image>
      <text>{{express.country_desc}}</text>
    </view>
    <view class="expressList">
      <view class="expressItem">
        <image src="{{express.icon}}" mode="widthFix" class="logo"></image>
        <view class="content">
          <text class="name">{{express.name}}</text>
          <text class="other" hidden="{{!express.site}}">官方网站：{{express.site}}</text>
          <text class="other" hidden="{{!express.tele}}">客服电话：{{express.tele}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
