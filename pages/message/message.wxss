page {
  background-color: #f2f2f2;
  padding-bottom: 100rpx;
}
.msgWrap {
  margin: 20rpx 0;
  background-color: #fff;
}
.msgWrap .msgItem {
  width: calc(100% - 120rpx);
  display: flex;
  align-items: center;
  height: 130rpx;
  padding: 0 60rpx;
  border-bottom: 2rpx solid #f2f2f2;
  background-color: #fff;
}
.msgWrap button.msgItem {
  width: 100%;
}
.msgWrap .itemWrap {
  width: 100%;
  position: relative;
}
.msgWrap .itemWrap .remove{  
  width: 160rpx;  
  height: 130rpx;  
  background-color: red; 
  color: white; 
  position: absolute;  
  top: 0;  
  right: -160rpx;  
  display: flex;  
  justify-content: center;  
  align-items: center;  
}  
.msgWrap .msgItem .left .iconfont {
  font-size: 74rpx;
  color: #033150;
}
.msgWrap .msgItem .left .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}
.msgWrap .msgItem .right {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  text-align: left;
}
.msgWrap .msgItem .title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
.msgWrap .msgItem .desc {
  font-size: 20rpx;
  color: #989898;
  margin-top: 10rpx;
  width: 526rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.msgWrap .msgItem .unread {
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  background-color: #f00;
  text-align: center;
  border-radius: 20rpx;
  font-size: 25rpx;
  color: #fff;
}
.msgWrap .msgItem .unread text {
  height: 50rpx;
  line-height: 50rpx;
}