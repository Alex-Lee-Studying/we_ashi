.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.mapWrap {
  flex: 1;
  position: relative;
}
.mapWrap .handleWrap {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9999;
  background-image: linear-gradient(rgba(0,0,0,.6), rgba(0,0,0,0));
  width: calc(100% - 30px);
  padding: 15px;
  display: flex;
  justify-content: space-between
}
.mapWrap .handleWrap button {
  margin: 0;
}
.mapWrap .handleWrap button.primary {
  background-color: #033150;
}
.myMap {
  width: 100%;
  height: 100%;
}
.searchWrap {
  height: 500rpx;
}
.searchWrap .top {
  display: flex;
  padding: 15px;
}
.searchWrap .top .inputWrap {
  flex: 1;
  display: flex;
  align-items: center;
  border: 1rpx solid #aaa;
  border-radius: 5px;
  margin-right: 15px;
  font-size: 16px;
}
.searchWrap .top .inputWrap icon {
  margin: 0 5px;
}
.searchWrap .bottom {
  padding: 0 15px;
  width: calc(100% - 30px);
  height: calc(500rpx - 65px);
}
.searchWrap .bottom .resultItem {
  border-bottom: 1px solid #eee;
  padding: 5px 0;
}
.searchWrap .bottom .resultItem:last-child {
  border-bottom: none;
}
.searchWrap .bottom .resultItem .title {
  color: #033150;
  font-size: 16px;
  line-height: 25px;
}
.searchWrap .bottom .resultItem .address {
  color: #aaa;
  font-size: 14px;
  line-height: 25px;
}