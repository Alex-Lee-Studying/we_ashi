.container{
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.contWrap {
}
.authWrap,.formWrap {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.authWrap image{
  width: 170rpx;
  height: auto;
}
.authWrap .company {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-top: 40rpx;
}
.formWrap {
  margin-top: 100rpx;
}
.formWrap .loginWX {
  margin: 0;
  padding: 0;
  width: 300rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  font-weight: normal;
  background-color: #033150;
  color: #fff;
}
.formWrap .checkWrap {
  margin: 60rpx 0 300rpx 0;
  font-size: 28rpx;
  color: #989898;
}
.formWrap .checkWrap navigator {
  display: inline-block;
}