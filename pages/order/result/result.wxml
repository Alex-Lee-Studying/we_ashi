<view class="container">
  <view class="successWrap" wx:if="{{delivery.status === 'waiting_for_pay'}}">
    <view class="status">
      <text class="iconfont iconzhifushibai"></text>
      <text class="statusstr">订单待支付</text>
    </view>
    <view class="notice">
      <text class="title">请尽快支付！</text>
    </view>
  </view>
  <view class="successWrap" wx:elif="{{delivery.status === 'delivering'}}">
    <view class="status">
      <text class="iconfont iconsuccess"></text>
      <text class="statusstr">支付成功</text>
    </view>
    <view class="notice">
      <text class="title">我们会尽快为您匹配！</text>
    </view>
    <!-- <view class="notice">
      <text class="title">请将物品送到</text>
      <text class="cont1">{{delivery.offical_address.country_desc}} {{delivery.offical_address.details}} </text>
      <text class="cont2">{{delivery.offical_address.recipient}}收</text>
    </view> -->
  </view>
  <view class="successWrap" wx:else>
    <view class="status">
      <text class="iconfont iconzhifushibai"></text>
      <text class="statusstr">支付失败</text>
    </view>
  </view>
</view>
