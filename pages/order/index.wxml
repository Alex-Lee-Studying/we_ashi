<view class="container">
  <view class="uploadWrap">
    <block wx:for="{{images}}" wx:key="*this">
      <view class="uploadImg">
        <image src="{{item}}" mode="aspectFill" data-idx="{{index}}" bindtap="handleImagePreview"></image>
        <view class="close" data-idx="{{index}}" bindtap="removeImage"><text class="iconfont iconclose"></text></view>
      </view>
    </block>
    <view class="plus" wx:if="{{images.length < 3}}" bindtap="chooseImage"><text class="iconfont iconplus"></text><text>照片</text></view>
  </view>
  <view class="deliveryWrap">
    <view class="country">
      <navigator url="/pages/city/city?cityType=departure">{{departure || '出发地'}}</navigator>
      <text class="iconfont icon-_danjiantou"></text>
      <navigator url="/pages/city/city?cityType=destination">{{destination || '目的地'}}</navigator>
    </view>

    <view class="addressWrap">
      <view class="title"><text>收货地址</text></view>
      <view class="info">
        <view class="infoItem">
          <text class="label">联系人：</text>
          <text class="value">lee peiying </text>
        </view>
        <view class="infoItem">
          <text class="label">电话：</text>
          <text class="value">+60 0125685715 </text>
        </view>
        <view class="infoItem">
          <text class="label">邮编：</text>
          <text class="value">14300 </text>
        </view>
        <view class="infoItem">
          <text class="label">地址：</text>
          <text class="value">58, Lorong Rajawali 13, Taman Berjaya, 14300 nibong tebal, Pulau Pinang, Malaysia</text>
        </view>
      </view>
    </view>

    <view class="formWrap">
      <view class="formItem">
        <label>物品类型</label>
        <picker mode="selector" range="{{typearray}}" value="{{formdata.item_type}}" bindchange="bindTypeChange" data-obj="formdata" data-item="item_type">
          <view class="picker">
            {{formdata.item_type || '请选择'}}
          </view>
        </picker>
      </view>
      <view class="formItem">
        <label>物品价格</label>
        <input type="number" value="{{formdata.price}}" placeholder="RMB" bindinput="inputInfo" data-obj="formdata" data-item="price"></input>
      </view>
      <view class="formItem">
        <label>重量</label>
        <input type="number" value="{{formdata.weight}}" placeholder="kg" bindinput="inputInfo" data-obj="formdata" data-item="weight"></input>
      </view>
    </view>
    <view class="notice"><text class="iconfont iconfaq"></text><text>温馨提示</text></view>
  </view>
  <view class="subWrap">
    <button type="primary" class="btnPrimary" hover-class="btnHover" bindtap="submitOrder">确认下单</button>
  </view>
</view>

