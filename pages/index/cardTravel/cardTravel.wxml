<wxs src="../../../utils/filter.wxs" module="filter" />
<view class="container">
  <view class="uwrap">
    <view><image src="{{travel.user.avatar}}" class="uimg"></image></view>
    <view class="utext">
      <text>{{travel.user.nick_name}}</text>
      <text>{{filter.formatTime(travel.created, "date")}}·{{travel.user.location}}</text>
    </view>
    <view class="share"><text class="iconfont iconshare"></text></view>
  </view>
  <view class="flightWrap">
    <view class="msgItem" style="margin-right: 30rpx;">
      <image src="/images/plane.png" class="plane" mode="widthFix"></image>
      <text class="flightno">{{travel.flight_no}}</text>
    </view>
    <view class="msgItem flightInfo">
      <view>
        <text class="time">出发日期：{{filter.formatTime(travel.dt_departure, "date")}}</text>
      </view>
      <view style="margin-top: 20rpx;">
        <text class="country">{{travel.departure}}</text><text class="iconfont icon-_danjiantou"></text><text class="country">{{travel.destination}}</text>
      </view>
    </view>
  </view>
  <view class="remarkWrap">
    <text>备注：{{travel.details}}</text>
  </view>
  <view class="subWrap">
    <button type="primary" class="btnPrimary" hover-class="btnHover">立即联系</button>
    <button type="primary" plain class="btnPrimary" hover-class="btnHover">请求帮带</button>
  </view>
</view>
